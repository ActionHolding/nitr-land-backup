{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "**/.tmp/**",
      "**/bower_components/**",
      "**/pug/**",
      "**/src/**",
      "**/test/**",
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
